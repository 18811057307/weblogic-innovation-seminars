  <!-- ==================================================================================== -->

  <profiles>
    <profile>
      <id>configure-cluster</id>

      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>

      <build>
        <defaultGoal>install</defaultGoal>

        <plugins>

          <plugin>
            <groupId>com.oracle.weblogic</groupId>
            <artifactId>wls-maven-plugin</artifactId>

            <configuration>
              <user>weblogic</user>
              <password>welcome1</password>
              <name>${project.build.finalName}</name>
            </configuration>

            <executions>
              <execution>
                <id>configure</id>
                <phase>install</phase>

                <goals>
                  <goal>wlst</goal>
                </goals>

                <configuration>
                  <middlewareHome>/u01/wls1212/</middlewareHome>
                  <weblogicHome>/u01/wls1212/wlserver</weblogicHome>


                  <fileName>${project.basedir}/src/main/wlst/configure-cluster.py</fileName>
                 <!-- <propertiesFile>${project.basedir}/src/main/wlst/environment.properties</propertiesFile> -->

                </configuration>

              </execution>
            </executions>
          </plugin>


        </plugins>
      </build>

    </profile>

